<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:id="@+id/mLayout">

    <ImageView
        android:id="@+id/petsResource"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/petsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Кличка"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/petsResource"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/petsBreed"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Порода"
        app:layout_constraintStart_toEndOf="@+id/petsResource"
        app:layout_constraintTop_toBottomOf="@+id/petsName" />

   <TextView
        android:id="@+id/petsDescr"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="Описание"
        app:layout_constraintStart_toEndOf="@+id/petsResource"
        app:layout_constraintTop_toBottomOf="@+id/petsBreed" />


</androidx.constraintlayout.widget.ConstraintLayout>